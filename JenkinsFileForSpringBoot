pipeline {
    agent any
    tools {
        maven "maven3.6.2"
    }
    stages {
        stage('Compile & Clean') {
            steps {
                sh "mvn clean compile"
            }
        }
        stage('Execution Perf Test') {
            steps {
                sh "mvn verify"
            }
        }
        stage('publish reports') {
            steps {
                 script {
                     publishHTML target: [
                         allowMissing:false,
                         alwaysLinkToLastBuild: false,
                         keepAll:true,
                         reportDir: 'target/jmeter/reports/*/',
                         reportFiles: 'index.html',
                         reportName: files[i]
                     ]
                 }
            }
        }
    }
}